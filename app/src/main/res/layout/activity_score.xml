<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   tools:context=".ScoreActivity">

    <Button
            android:text="Accueil"
            android:layout_width="331dp"
            android:layout_height="46dp"
            android:id="@+id/acceuil" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/restart" android:layout_marginBottom="68dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.309"
            android:textColor="#FFFFFF"
            android:textAlignment="center" android:background="#BA9C27B0" android:textSize="24sp"
            android:textStyle="bold"/>
    <Button
            android:text="Recommencer"
            android:layout_width="331dp"
            android:layout_height="46dp"
            android:id="@+id/restart" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginBottom="112dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.309"
            android:textColor="#FFFFFF"
            android:textAlignment="center" android:background="#BA9C27B0" android:textSize="24sp"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="410dp"
            android:gravity="center"
            android:padding="20dp"
            android:layout_height="303dp"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:background="#BA9C27B0" android:textColor="#FFFFFF" android:textSize="100sp"
            app:layout_constraintHorizontal_bias="0.533" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.453"
            android:text="ok"/>
    <TextView
            android:text="Sur les 5 Questions vous avez fais un score de :"
            android:layout_width="341dp"
            android:layout_height="63dp"
            android:id="@+id/textView7"
            app:layout_constraintBottom_toTopOf="@+id/textView4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp" android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintVertical_bias="0.793" android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>
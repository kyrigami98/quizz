<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".QuizzActivity">

    <TextView
            android:text="20:01"
            android:layout_width="144dp"
            android:layout_height="71dp"
            android:gravity="center"
            android:id="@+id/timer"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3" android:textAllCaps="false"
            android:textAlignment="center" android:textSize="30sp" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:layout_width="410dp"
            android:gravity="center"
            android:padding="20dp"
            android:layout_height="303dp"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:background="#BA9C27B0" android:textColor="#FFFFFF" android:textSize="36sp"
            app:layout_constraintHorizontal_bias="0.533"/>
    <TextView
            android:text="Questions 1/5"
            android:layout_width="233dp"
            android:layout_height="83dp"
            android:gravity="center"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:layout_marginEnd="72dp" app:layout_constraintEnd_toStartOf="@+id/timer"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.16" app:layout_constraintVertical_bias="0.703"/>
    <RadioGroup
            android:layout_width="344dp"
            android:layout_height="199dp"
            android:id="@+id/radioGroup" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:gravity="center">
        <RadioButton
                android:text="RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton" android:layout_weight="1"
                android:gravity="center" android:textSize="18sp" android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:textSize="18sp"
                android:textAlignment="gravity" android:gravity="center" android:checked="false"
        />
        <RadioButton
                android:text="RadioButton"
                android:layout_width="match_parent"
                android:layout_height="14dp" android:id="@+id/radioButton3" android:layout_weight="1"
                android:textAlignment="gravity" android:textSize="18sp"
                android:gravity="center" android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
    </RadioGroup>
    <Button
            android:text="Suivant"
            android:layout_width="331dp"
            android:layout_height="46dp"
            android:id="@+id/button2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.309"
            android:textColor="#FFFFFF"
            android:textAlignment="center" android:background="#BA9C27B0" android:textSize="24sp"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="121dp"
            android:layout_height="27dp"
            android:id="@+id/textView5" android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView3" android:textAlignment="center"
            android:textStyle="bold" android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FCF8F8" android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>